<br><br><br><br><h1>Add record</h1>
<br>
{{#if error}}<span>{{error}}</span>{{/if}}
<form method="POST" action="/record/add">
    <div class="form-group">
        <label>ID</label>
        <input type="text" name="id" class="form-control" placeholder="Add ID" />
    </div>
    <div class="form-group">
        <label>Distance</label>
        <input type="text" name="distance" class="form-control" placeholder="Add distance" />
    </div>
    <div class="form-group">
        <label>Time</label>
        <input type="text" name="time" class="form-control" placeholder="Add time" />
    </div>
    <div class="form-group">
        <label>First Name</label>
        <input type="text" name="first_name" class="form-control" placeholder="Add Record Holder First Name" />
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input type="text" name="last_name" class="form-control" placeholder="Add Record Holder Last Name" />
    </div>
    <div class="form-group">
        <label>Year</label>
        <input type="text" name="year" class="form-control" placeholder="Add Record Year" />
    </div>
    <div class="form-group">
        <label>Location</label>
        <input type="text" name="location" class="form-control" placeholder="Add Record Location" />
    </div>
    <input type="submit" class="btn btn-primary" value="Save" />
</form>
